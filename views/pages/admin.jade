extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="post",action="/admin/movie")
                .form-group
                    label.col-sm-2.control-label(for="inputTitle") 电影名字
                    .col-lg-10
                        input#inputTitle.from-control(type="text",name="movie[title]",value="paradise")
                .form-group
                    label.col-sm-2.control-label(for="inputDoctor") 电影导演
                    .col-sm-10
                        input#inputDoctor.from-control(type="text",name="movie[doctor]")
                .form-group
                    label.col-sm-2.control-label(for="inputCountry") 国家
                    .col-sm-10
                        input#inputCountry.from-control(type="text",name="movie[country]")
                .form-group
                    label.col-sm-2.control-label(for="inputLanguage") 语种
                    .col-sm-10
                        input#inputLanguage.from-control(type="text",name="movie[language]")
                .form-group
                    label.col-sm-2.control-label(for="inputPoster") 海报地址
                    .col-sm-10
                        input#inputPoster.from-control(type="text",name="movie[poster]")
                .form-group
                    label.col-sm-2.control-label(for="inputFlash") 片源地址
                    .col-sm-10
                        input#inputFlash.from-control(type="text",name="movie[flash]")
                .form-group
                    label.col-sm-2.control-label(for="inputYear") 上映年代
                    .col-sm-10
                        input#inputYear.from-control(type="text",name="movie[year]")
                .form-group
                    label.col-sm-2.control-label(for="inputSummary") 电影简介
                    .col-sm-10
                        input#inputSummary.from-control(type="text",name="movie[summary]")
                .form-group
                    .col-sm-offset-2.col-sm-10
                        button.btn.btn-default(type="submit") 录入

