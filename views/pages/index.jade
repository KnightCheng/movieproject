extends ../layout

block content
    .container
        .row
            each item in movies
                .col-md-2
                    .thumbnails
                        a(href="/movie/#{item._id}")
                        img(src="#{item.poster}",alt="#{item.title}",width="160",height="200")
                        .caption
                            h3 #{item.title}
                            p:a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片